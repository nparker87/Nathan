@using System.Web.Optimization
@model Nathan.ViewModels.BaseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nathan | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("Head", false)
</head>
<body>
    <div id="wrapper">
        <nav>
            <ul>
                <li class="@(Model.CurrentTab == "Home" ? "selected" : "")">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="@(Model.CurrentTab == "Skills" ? "selected" : "")">
                    @Html.ActionLink("Skills", "Index", "Skills")
                </li>
                <li class="@(Model.CurrentTab == "Contact" ? "selected" : "")">
                    @Html.ActionLink("Contact", "Index", "Contact")
                </li>
            </ul>
        </nav>
        <div id="main">
            @RenderBody()
        </div>
        <footer>
            Nathan Parker | Web Developer<br />
            1101 N. Hamilton St. Apt I Richmond, VA 23221 | <a href="mailto:parkerjn2@vcu.edu">parkerjn2@@vcu.edu</a>
        </footer>
    </div>
    @Scripts.Render("~/Scripts")
    @RenderSection("scripts", false)
</body>
</html>