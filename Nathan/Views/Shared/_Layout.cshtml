@using System.Web.Optimization
@model Nathan.ViewModels.BaseViewModel

<!DOCTYPE html>
<html>
<head>
	<title>Nathan | @ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@RenderSection("Head", false)
</head>
<body>
	<nav>
		<ul>
			<li class="@(Model.CurrentTab == "Contact" ? "selected" : "")">
				@Html.ActionLink("Contact", "Index", "Contact")
			</li>
			<li class="@(Model.CurrentTab == "Skills" ? "selected" : "")">
				@Html.ActionLink("Skills", "Index", "Skills")
			</li>
			<li class="@(Model.CurrentTab == "Home" ? "selected" : "")">
				@Html.ActionLink("Home", "Index", "Home")
			</li>
		</ul>
	</nav>
	<div id="main">
		@RenderBody()
	</div>
	<footer>
		Nathan Parker | Web Developer | <a href="mailto:parkerjn3@gmail.com">parkerjn3@gmail.com</a>
	</footer>
	@Scripts.Render("~/Scripts")
	@RenderSection("scripts", false)
</body>
</html>